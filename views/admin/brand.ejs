<%-include('../admin/layout/admin-header-layout.ejs') -%>

    <div class="col-lg">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Add brand</div>
                <hr>
                <form action="/admin/addbrand" method="post">

                    <div class="form-group">
                        <label for="input-4">Brand name</label>
                        <input class="form-control" id="input-4" type="text" required name="brand">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success px-5"> Add brand</button>
                    </div>
                </form>
            </div>
        </div>




        <div class="card">
            <div class="card-body ">
                <div style="display: flex; justify-content: space-between;">
                    <h5 class="card-title">Brands</h5>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">brand Text</th>

                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% brands.forEach((brand,index)=> { %>
                                <tr class="justify-content-center align-items-center">
                                    <td>
                                        <%= index +1 %>
                                    </td>
                                    <td>
                                        <%= brand.brand %>
                                    </td>

                                    <td>

                                        <form action="/admin/deletebrand/<%= brand._id %>" method="get">
                                            <button type="submit" class="btn  btn-danger 	fa fa-trash"
                                                style="width: 75px; height: 30px;"
                                                onclick="return confirm('Are you sure you want to delete ?')">
                                                <p placeholder="Delete"></p>
                                            </button>
                                        </form>
                                    </td>

                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>



            <%-include('../admin/layout/admin-footer-layout') -%>
                <script>
                    document.getElementById("input-4").addEventListener("input", function () {
                        this.value = capitalizeFirstLetter(this.value);
                    });
                    document.getElementById("input-7").addEventListener("input", function () {
                        this.value = capitalizeFirstLetter(this.value);
                    });

                    function capitalizeFirstLetter(value) {
                        return value.charAt(0).toUpperCase() + value.slice(1);
                    }

                </script>