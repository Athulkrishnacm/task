<%- include('../user/layout/user-header.ejs') -%>

    <div class="col-lg">
        <!-- custom order -->
        <h1>Custom order</h1>
        <div class="container-fluid pb-5">
            <div class="row px-xl-5">
                <div class="col-lg-5 mb-30">
                    <div id="product-carousel" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner bg-light">
                            <div class="carousel-item active">
                                <img class="w-100 h-100" src="/images/product/<%= product.Image[0] %>" alt="Image">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                            <i class="fa fa-2x fa-angle-left text-dark"></i>
                        </a>
                        <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                            <i class="fa fa-2x fa-angle-right text-dark"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-7 h-auto mb-30">
                    <div class="h-100 bg-light p-30">
                        <h3>
                            <%= product.productName %>
                        </h3>

                        <h3 class="font-weight-semi-bold mb-4">â‚¹<%= product.price %>
                        </h3>
                        <p class="mb-4">
                            <%= product.description %>
                        </p>
                        <form action="/cart" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="brand" style="color: #000;">Brand</label>

                                <select name="brand" id="brand">
                                    <% brands.forEach((brand,index)=> { %>
                                        <option class="device--options" value="<%= brand.brand %>">
                                            <%= brand.brand %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="model" style="color: #000;">Model</label>

                                <select name="model" id="model">
                                    <% models.forEach((model,index)=> { %>
                                        <option class="device--options" value="<%= model %>">
                                            <%= model %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="category" style="color: #000;">Category</label>

                                <select class="group input-group form-control" name="category" id="">
                                    <% allCategory.forEach((category)=>{ %>
                                        <option>
                                            <%= category.category %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="input-5" style="color: #000;">Custom Image</label>
                                <input type="file" class="form-control" id="input-5" name="Image"
                                    placeholder="Choose an image" />
                            </div>
                            <div class="input-group quantity mr-3" style="width: 130px;">
                                <button class="btn btn-primary px-3 rounded"><i class="fa fa-bolt mr-1"></i> Buy Now
                                </button>
                            </div>
                        </form>
                        <div class="d-flex pt-2">
                            <strong class="text-dark mr-2">Share on:</strong>
                            <div class="d-inline-flex">
                                <a class="text-dark px-2">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a class="text-dark px-2">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <a class="text-dark px-2">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>
                                <a class="text-dark px-2">
                                    <i class="fab fa-pinterest"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <%- include('../user/layout/user-footer.ejs') -%>
