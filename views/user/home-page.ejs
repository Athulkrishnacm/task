<%- include('../user/layout/user-header.ejs') -%>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Carousel Start -->
    <div class="container-fluid mb-3">
        <div class="row px-xl-5">

            <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
                <ol class="carousel-indicators">
                    <% banners.forEach((banner, index)=> { %>
                        <li data-target="#header-carousel" data-slide-to="<%= index %>" <% if (index===0) { %>
                            class="active"<% } %>></li>
                        <% }); %>
                </ol>

                <div class="carousel-inner">
                    <% banners.forEach((banner,index)=> { %>
                        <div class="carousel-item position-relative  <%= index===0 ? 'active' : '' %>"
                            style="height: 600px;">
                            <img class="position-absolute w-100 h-100" src='/images/banner/<%= banner.Image %>'
                                style="object-fit: cover;">
                            <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                                <div class="p-3" style="max-width: 700px;">
                                    <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">
                                        <%= banner.banner %>
                                    </h1>
                                    <p class="mx-md-5 px-5 animate__animated animate__bounceIn"></p>
                                    <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp"
                                        href="/product-page/<%= banner._id %>">Shop Now</a>
                                </div>
                            </div>
                            <div class="image-overlay"></div>
                        </div>
                        <% }) %>
                </div>
            </div>

        </div>
    </div>
    <!-- Carousel End -->

    <!-- Category Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5 pb-3">
            <% allCategory.forEach((category,index)=> { %>

                <div class="col-lg-4 col-md-6 col-sm-12 ">
                    <div class="product-offer mb-30" style="height: 200px;">
                        <img class="img-fluid" src='/images/category/<%= category.Image %>' alt="">
                        <div class="offer-text">
                            <h3 class="text-white">
                                <%= category.category %>
                            </h3>
                            <a href="/productCategory/<%= category._id%>" class="btn btn-primary">Shop Now</a>
                        </div>
                        <div class="image-overlay"></div>

                    </div>
                </div>
                <% }) %>
        </div>
    </div>
    <!-- Category End -->


    <!-- Featured Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5 pb-3">
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-check text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">Quality Product</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-shipping-fast text-primary m-0 mr-2"></h1>
                    <h5 class="font-weight-semi-bold m-0">Free Shipping</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fas fa-exchange-alt text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">14-Day Return</h5>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 pb-1">
                <div class="d-flex align-items-center bg-light mb-4" style="padding: 30px;">
                    <h1 class="fa fa-phone-volume text-primary m-0 mr-3"></h1>
                    <h5 class="font-weight-semi-bold m-0">24/7 Support</h5>
                </div>
            </div>
        </div>
    </div>
    <!-- Featured End -->


    <!-- Categories Start -->
    <div class="container-fluid pt-5 pb-3">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Today
                Deals</span></h2>

        <div class="row px-xl-5">
            <% todayDeal.forEach((obj)=>{ %>
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">

                    <div class="product-item bg-light mb-4">
                        <div class="product-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="/images/product/<%= obj.Image[0] %>" alt="">
                            <div class="product-action">
                                <!-- <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-shopping-cart"></i></a> -->
                                <a onclick="addToWishlist('<%= obj._id %>','<%=obj.productName %>')"
                                    class="btn btn-outline-dark btn-square" href=""><i class="far fa-heart"></i></a>
                                <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                                <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-truncate" href="/product-page/<%= obj._id %>">
                                <%= obj.productName %>
                            </a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>
                                    <%= obj.price %>
                                </h5>
                                <h6 class="text-muted ml-2"></h6>
                                <h5> <span class="bg-secondary pr-3 align-items-center rounded">
                                        <%= obj.size %>
                                    </span></h5>
                            </div>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>
                                    <%= obj.description %>
                                </h5>
                            </div>
                            <div class="d-flex align-items-center justify-content-center mb-1">
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small>(99)</small>
                            </div>
                        </div>
                    </div>

                </div>
                <% }) %>
        </div>

    </div>







    <%- include('../user/layout/user-footer.ejs') -%>
        <style>
            .image-overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.5));
                pointer-events: none;
                /* Allow clicking through the overlay */
            }
        </style>